<html>
	<head></head>
	<body>
		#if ( $item.description )
			$item.description
		#end
		<br>
		<hr>
		<br>
		<em>
			#if ( $item.link )
				Article: <a href="$item.link">$item.link</a>
			#end

			#foreach ( $enclosure in $item.enclosures )
				<br><br>Download: <a href="$enclosure.url">$enclosure.url</a>
			#end
			
			<br><br><span style="font-size: 0.8em; color: #888;">Item ID: ${item.id}</span>
		</em>
	</body>
</html>